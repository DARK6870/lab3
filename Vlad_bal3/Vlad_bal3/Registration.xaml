<Window x:Class="Vlad_bal3.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vlad_bal3"
        mc:Ignorable="d"
                xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Login into account" MinHeight="700" MinWidth="850" Height="700" Width="850" Icon="ghost-solid.png" MaxHeight="800" MaxWidth="850">
    <Grid>
        <Image Width="80" HorizontalAlignment="Center" Height="100" Stretch="Fill" Margin="0,50,0,0" VerticalAlignment="Top" Source="/ghost-solid.png" RenderOptions.BitmapScalingMode="HighQuality"/>
        <TextBox materialDesign:TextFieldAssist.HasClearButton="True" Padding="10,10,5,5" x:Name="username_tb" Width="300" materialDesign:HintAssist.Hint="Enter username" FontSize="15" Style="{StaticResource MaterialDesignOutlinedTextBox}" BorderThickness="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,220,350,0" Height="45" 
            FontWeight="Regular" VerticalContentAlignment="Center" BorderBrush="#FF006FDD" SelectionBrush="#FF006FDD" CaretBrush="#FF0055A4" SelectionOpacity="0.3" FontFamily="Cascadia Code"/>
        <TextBox materialDesign:TextFieldAssist.HasClearButton="True" Padding="10,10,5,5" x:Name="email_tb" Width="300" materialDesign:HintAssist.Hint="Enter email" FontSize="15" Style="{StaticResource MaterialDesignOutlinedTextBox}" BorderThickness="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="350,220,0,0" Height="45" 
    FontWeight="Regular" VerticalContentAlignment="Center" BorderBrush="#FF006FDD" SelectionBrush="#FF006FDD" CaretBrush="#FF0055A4" SelectionOpacity="0.3" FontFamily="Cascadia Code"/>
        <PasswordBox Padding="10,10,5,5" x:Name="password_tb" Width="300" materialDesign:HintAssist.Hint="Enter password" FontSize="15" materialDesign:TextFieldAssist.HasClearButton="True"
Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}" BorderThickness="2" VerticalAlignment="Top" HorizontalAlignment="Center" Height="45" 
            FontWeight="Regular" VerticalContentAlignment="Center" BorderBrush="#FF006FDD" SelectionBrush="#FF006FDD" CaretBrush="#FF0055A4" SelectionOpacity="0.3" FontFamily="Cascadia Code" Margin="0,280,350,0"/>
        <TextBox materialDesign:TextFieldAssist.HasClearButton="True" Padding="10,10,5,5" x:Name="fullName_tb" Width="300" materialDesign:HintAssist.Hint="Enter fullname" FontSize="15" Style="{StaticResource MaterialDesignOutlinedTextBox}" BorderThickness="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="350,280,0,0" Height="45" 
FontWeight="Regular" VerticalContentAlignment="Center" BorderBrush="#FF006FDD" SelectionBrush="#FF006FDD" CaretBrush="#FF0055A4" SelectionOpacity="0.3" FontFamily="Cascadia Code"/>
        <Label Content="Create a new account" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Top" Foreground="#FF3E3E3E" FontSize="25" FontWeight="Bold"/>
        <Button Height="40" Content="Login into account" HorizontalAlignment="Left" Margin="70,0,0,90" VerticalAlignment="Bottom"/>
        <Button x:Name="clear_btn" Click="clear_btn_Click" Height="40" Content="Clear all data" HorizontalAlignment="Right" Margin="0,0,70,90" VerticalAlignment="Bottom" Background="#FFB94343" BorderBrush="#FFA43E3E"/>
        <Button x:Name="openLoginForm" Click="openLoginForm_Click" Content="Don't have account? Register" Height="20" FontSize="12" Background="Transparent" BorderBrush="Transparent" Foreground="Gray" HorizontalAlignment="Center" Padding="0,0,0,0" Margin="0,0,0,10" VerticalAlignment="Bottom"/>
        <Label Content="Gender: " HorizontalAlignment="Left" Margin="100,349,0,0" VerticalAlignment="Top" Foreground="gray" FontSize="15" FontWeight="Regular"/>
        <RadioButton x:Name="male" Foreground="Gray" FontSize="15" FontFamily="Cascadia Code" Content="Male" IsChecked="True" HorizontalAlignment="Left" Margin="184,348,0,0" VerticalAlignment="Top" Height="30" Width="86"/>
        <RadioButton x:Name="female" Foreground="Gray" FontSize="15" FontFamily="Cascadia Code" Content="Female" HorizontalAlignment="Left" Margin="264,348,0,0" VerticalAlignment="Top" Height="30" Width="86"/>
        <DatePicker
        Width="300"
        materialDesign:DatePickerAssist.OutlinedBorderInactiveThickness="2"
        materialDesign:HintAssist.Hint="Date birthday" FontWeight="Regular" BorderBrush="#FF006FDD"
        Style="{StaticResource MaterialDesignOutlinedDatePicker}" BorderThickness="2" Margin="350,340,0,0" Foreground="Gray" FontSize="15" FontFamily="Cascadia Code" VerticalAlignment="Top" HorizontalAlignment="Center" Padding="10,10,5,5" Height="45"/>
        <ComboBox BorderThickness="2"
                  Padding="10,10,5,5"
                  Height="46"
    x:Name="OutlinedComboBox"
    materialDesign:HintAssist.Hint="Native language"
    IsEnabled="{Binding Path=IsChecked, ElementName=OutlinedComboBoxEnabledCheckBox}"
    Style="{StaticResource MaterialDesignOutlinedComboBox}" BorderBrush="#FF006FDD" Width="300" Margin="0,400,350,0" VerticalAlignment="Top" Foreground="Gray" FontSize="15" FontFamily="Cascadia Code" HorizontalAlignment="Center">
            <ComboBoxItem Content="Russian"/>
            <ComboBoxItem Content="English"/>
            <ComboBoxItem Content="Romanian"/>
            <ComboBoxItem Content="Polish"/>
            <ComboBoxItem Content="Spanish"/>
            <ComboBoxItem Content="Italian"/>
            <ComboBoxItem Content="Other"/>
        </ComboBox>

        <Label Content="Other languages: " HorizontalAlignment="Left" Margin="450,406,0,0" VerticalAlignment="Top" Foreground="gray" FontSize="15" FontWeight="Regular"/>

        <ListBox Margin="450,437,107,117" >
            <CheckBox  Content="Russian"/>
        </ListBox>
    </Grid>
</Window>
